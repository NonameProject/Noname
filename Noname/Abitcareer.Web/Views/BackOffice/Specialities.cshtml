@using Abitcareer.Mvc.ViewModels.LocalizedViewModels
@using System.Web
@using System.Globalization
@using System.Web.Mvc
@using System.Text.RegularExpressions
@using System.Globalization
@model List<SpecialityViewModel>

@section styles
{
    @Styles.Render("~/Content/bootstrap.css")
    @Styles.Render("~/Content/Specialities.css")
    @Styles.Render("~/Content/Site.css")
}

<h2>@LocalizationResx.Specialities</h2>

<div id="partialView">
    <div id="inner">
        
    </div>
</div>

<div class="search">
    <input placeholder="@LocalizationResx.Search" id="search"/>
</div>

<div id="wrapper">
        <div id="addNew" class="card col-md-4 boxShadow17">
            <span>@LocalizationResx.NewSpeciality</span>
        </div>
        @foreach (var item in Model)
        {
            { Html.RenderPartial("SpecialityPartial", item); }
        }
</div>

@section Scripts
{
   @Scripts.Render("~/Scripts/SpecialitiesEditor.js")
   @Scripts.Render("~/Scripts/search.js")
}