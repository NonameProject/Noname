@model Abitcareer.Mvc.ViewModels.Authorize.UserViewModel

@{
    ViewBag.Title = "AbitCareer | " + LocalizationResx.PageLogin;
}
@section styles {
    @Styles.Render("~/Content/User.css")
}

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()

    <h3>@LocalizationResx.Logining</h3>
    
    <div class="form-group">
        @Html.TextBoxFor(model => model.Email, new { @class="form-control", placeholder=LocalizationResx.Email})
        @Html.ValidationMessageFor(model => model.Email)
    </div>
    <div class="form-group">
        @Html.PasswordFor(model => model.Password, new { @class="form-control", placeholder=LocalizationResx.Password})
        @Html.ValidationMessageFor(model => model.Password)
    </div>
    
    <button type="submit" class="btn btn-default">@LocalizationResx.Login</button>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
